        "properties": {
            "symbol": {
                "type": "string",
                "description": "Currency unit symbol"
            },
            "minorUnit": {
                "description": "Precision",
                "type": "integer",
                "default": 2,
                "isRequired": true
            }
        }
    },
    {
        "name": "Currency",
        "plural": "Currencies",
        "module": "Core",
        "description": "Currency",
        "inherits": "Kind",
        "fetchOnStartup": true,
        "properties": {
            "symbol": {
                "description": "Symbol",
                "type": "string"
            },
            "minorUnit": {
                "description": "Precision",
                "type": "integer",
                "default": 2
            },
            "isBase": {
                "description": "System base currency flag",
                "type": "boolean"
            },
            "hasDisplayUnit": {
                "description": "Use alternate unit of mesaure in display",
                "type": "boolean",
                "isRequired": true,
                "default": false
            },
            "displayUnit": {
                "type": {
                    "relation": "CurrencyUnit",
                    "properties": [
                        "code", 
                        "description", 
                        "minorUnit", 
                        "symbol"
                    ]
                },
                "description": "Display unit of mesaure"
            }
        }
    },
    {
        "name": "CurrencyUnitConversion",
        "plural": "CurrencyUnitConversions",
        "module": "Core",
        "description": "Currency Unit Conversion",
        "properties": {
            "parent": {
                "description": "Parent",
                "type": {
                    "relation": "Currency",
                    "childOf": "conversions"
                }
            },
            "toUnit": {
                "description": "To unit of measure",
                "type": {
                  "relation": "Unit",
                  "properties": ["code", "description"]
                },
                "isRequired": true
            },
            "ratio": {
                "description": "conversion ratio",
                "type": "number",
                "default": 1,
                "isRequired": true
            }
        }
    },
    {
        "name": "CurrencyConversion",
        "plural": "CurrencyConversions",
        "module": "Core",
        "description": "Currency Conversion rates",
        "properties": {
            "fromCurrency": {
                "description": "Currency converting from",
                "type": {
                  "relation": "Currency",
                  "properties": [
                    "code",
                    "description",
                    "symbol",
                    "minorUnit"
                  ]
                },
                "default": "baseCurrency()",
                "isRequired": true
            },
            "toCurrency": {
                "description": "Currency converting to",
                "type": {
                  "relation": "Currency",
                  "properties": [
                    "code",
                    "description",
                    "symbol",
                    "minorUnit"
                  ]
                },
                "isRequired": true
            },
            "ratio": {
                "description": "conversion ratio",
                "type": "number",
                "default": 1,
                "isRequired": true
            },
            "effective": {
                "description": "effective date",
                "type": "date",
                "format": "dateTime",
                "default": "now()",
                "isRequired": true
            }
        }
    }
